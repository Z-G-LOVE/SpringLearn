<?xml version="1.0" encoding="UTF-8"?>
<!--suppress ALL -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="user" class="org.example.pojo.User">
        <!--注入List集合属性-->
        <property name="goods">
            <list>
                <value>晴天娃娃</value>
                <value>剪刀</value>
            </list>
        </property>
        <!--注入数组属性-->
        <property name="ids">
            <array>
                <value>1234</value>
                <value>4567</value>
            </array>
        </property>
        <!--注入map集合属性-->
        <property name="value">
            <map>
                <entry key="晴天娃娃" value="100.0"/>
                <entry key="剪刀" value="5.0"/>
            </map>
        </property>
        <!--引入商品详细信息-->
        <property name="goodAttributes">
            <list>
                <ref bean="SunnyDoll"/>
                <ref bean="scissors"/>
            </list>
        </property>
    </bean>
    <!--注册商品-->
    <bean name="SunnyDoll" class="org.example.pojo.Goods">
        <property name="good_ID" value="1234"/>
        <property name="good_name" value="晴天娃娃"/>
        <property name="good_price" value="100.0"/>
    </bean>

    <bean name="scissors" class="org.example.pojo.Goods">
        <property name="good_ID" value="4567"/>
        <property name="good_name" value="剪刀"/>
        <property name="good_price" value="5.0"/>
    </bean>

</beans>